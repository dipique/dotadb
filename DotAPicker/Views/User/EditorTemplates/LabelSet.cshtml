@using DotAPicker.Models
@model LabelSet


@{
    <input class="text-box single-line add-label form-control" id="txtAdd" onkeyup="" type="text" value="" placeholder="New label..." />
    <input type="button" class="add-label-button" value="Add" />
    <hr style="margin: 5px" />
    <div class="label-set" id="@ViewData.TemplateInfo.HtmlFieldPrefix">
        @for (int x = 0; x < Model.Count(); x++) {
        <div class="label-div" id="@x">
            @Html.EditorFor(m => m[x], new { htmlAttributes = new { @class = "label-input-box form-control valid" } })
            <a href="#" class="remove-label" id="@x">(remove)</a>
        </div>
        }
    </div>
}

