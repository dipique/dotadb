<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Personal DotA DB</title>
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/util.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Styles", false)
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Personal DotA DB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Hero Picker", "Index", "Home")</li>
                    <li>@Html.ActionLink("Heroes", "Index", "Hero")</li>
                    <li>@Html.ActionLink("Tips", "Index", "Tip")</li>
                    <li>@Html.ActionLink("Relationships", "Index", "Relationship")</li>
                    @*<li>@Html.ActionLink("Users", "Index", "User")</li>*@
                </ul>
            </div>
        </div>
    </div>

    @{
        var alertFlags = new string[] { "warning", "success", "info", "danger" };
        var foundCookie = alertFlags.Select(f => Request.Cookies[f])
                                    .Where(c => c != null)
                                    .FirstOrDefault();
        if (foundCookie != null)
        {
            var alertClass = $"alert alert-{foundCookie.Name}"; //warning/yellow | success/green | info/blue | danger/red

            <div id="pop-down-alert" class="@alertClass">
                @Request.Cookies[2].Value <a id="close">[close]</a>
            </div>
        }
    }

    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Daniel Kaschel</p>
    </footer>

    <script>
        close = document.getElementById("close");
        close.addEventListener('click', function () {
            note = document.getElementById("note");
            note.style.display = 'none';
        }, false);
    </script>

</body>
</html>
